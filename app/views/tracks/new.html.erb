<h1> Please submit a new Track </h1>

<%= render "shared/errors", thing: @track %>
<form action="<%= tracks_url %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label> Name
    <input type="text" name="track[title]" value="<%=@track.title %>">
  </label>
  <br>
  <label> Bonus Track
  <input type="radio" name="track[track_type]" value="bonus">
</label>
  <label> Regular Track
  <input type="radio" name="track[track_type]" value="regular">
</label>
<input type="hidden" name="track[album_id]" value="<%= params[:album_id] %>">

  <br>
  <label> Lyrics
  <textarea name="track[lyrics]"><%=@track.lyrics %></textarea>
</label>

  <input type="submit" value="Submit Track!!">

</form>
