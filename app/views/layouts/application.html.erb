<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>

  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
  <form action="<%= session_url %>" method="POST">
    <input type="hidden" name="_method" value="delete">
    <input type="hidden"
            name="authenticity_token"
            value="<%= form_authenticity_token %>">

    <input type="submit" value="LOG OUT!">

  </form>


  <% end %>
  <% if flash[:errors] %>
    <%= flash[:errors] %>

  <% end %>

<%= yield %>

</body>
</html>
